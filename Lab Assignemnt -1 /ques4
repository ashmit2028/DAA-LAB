int arr[] = {-2, -5, 6, -2, -3, 1, 5, -6};
int n = sizeof(arr)/sizeof(arr[0]);
int max_so_far = arr[0];
int curr_max = arr[0];

for (int i = 1; i < n; i++) {
    curr_max = (arr[i] > curr_max + arr[i]) ? arr[i] : curr_max + arr[i];
    max_so_far = (max_so_far > curr_max) ? max_so_far : curr_max;
}
